<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile="/temp/pullrequests-internal-nlog.txt">
  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
  <variable name="myLayout">
    <layout xsi:type="JsonLayout" includeAllProperties="true" includeMdlc="true" maxRecursionLimit="2" >
      <!-- Version number of GELF (1.1): Required-->
      <attribute name ="version" layout = "1.1" />
      <!-- Domain of the Log: Default -> No Domain Found: Required-->
      <attribute name="host" layout="${machinename:whenEmpty=Not Found}" />
      <!-- Short Descriptive Message of Exception at High Level or Custom: Custom takes precedence: Required-->
      <attribute name="short_message" layout="${message}" />
      <!-- Facility: cchmc.NLogger -> For querying in Graylog -->
      <attribute name="facility" layout="${appdomain:format={1\}}" />
      <!--Nlog level set to match numerical equivalent of syslog level per GrayLog standards: http://www.kiwisyslog.com/help/syslog/index.html?protocol_levels.htm-->
      <attribute name="level" layout="${level:format=Ordinal}"/>

      <!-- now that mdlc are included this is the TraceId -->
      <attribute name="_logger_name" layout="${logger}" />
      <!-- Severity: NLog Log Level -->
      <attribute name="_nlog_level_name" layout ="${level}" />
      <!-- Time Sent: Stores the timestamp of when the log was created-->
      <attribute name="_time_sent" layout="${longdate}" />

      <attribute name="_exception" layout="${exception:format=tostring}" />
      <attribute name="_user_id" layout="${aspnet-user-identity}" />
      <attribute name="_useragent" layout="${aspnet-request-useragent}" />
    </layout>
  </variable>
  <!-- the targets to write to -->
  <targets async="true">
    <target xsi:type="FallbackGroup"
        name="FallBack"
        returnToFirstOnSuccess="true">
      <target xsi:type="Network"
            name="graylogHTTP"
            address="http://mcgraylog2.chmccorp.cchmc.org:12201/gelf"
            layout="${myLayout}" />

      <target xsi:type="Network"
            name="graylogHTTP"
            address="http://mcgraylog3.chmccorp.cchmc.org:12201/gelf"
            layout="${myLayout}" />

      <target xsi:type="Network"
            name="graylogHTTP"
            address="http://mcgraylog4.chmccorp.cchmc.org:12201/gelf"
            layout="${myLayout}" />
      
      <target xsi:type="File" name="ownFile-web" fileName="/temp/{{cookiecutter.project_nospace}}-nlog-own-${shortdate}.log"
           layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}" />
    </target>
  </targets>
  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Info" writeTo="FallBack" />
  </rules>
</nlog>